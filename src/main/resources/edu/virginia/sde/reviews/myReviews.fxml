<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.virginia.sde.reviews.MyReviewsController"
            prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-color: #f5f5f5;">

    <top>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="Course Reviews System"
                       style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Label fx:id="headerLabel"
                       style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Label text="My Reviews"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <TableView fx:id="myReviewsTable"
                       prefHeight="500.0"
                       style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 4;">
                <columns>
                    <TableColumn fx:id="subjectColumn"
                                 text="Subject"
                                 prefWidth="100.0"/>
                    <TableColumn fx:id="numberColumn"
                                 text="Number"
                                 prefWidth="100.0"/>
                    <TableColumn fx:id="titleColumn"
                                 text="Title"
                                 prefWidth="400.0"/>
                    <TableColumn fx:id="ratingColumn"
                                 text="Rating"
                                 prefWidth="100.0"/>
                    <TableColumn fx:id="commentColumn"
                                 text="Comment"
                                 prefWidth="400.0"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10"
              alignment="CENTER_RIGHT"
              style="-fx-padding: 10; -fx-background-color: #ecf0f1;">
            <Label fx:id="messageLabel"
                   style="-fx-font-size: 12px;"
                   HBox.hgrow="ALWAYS"/>
            <Button fx:id="backButton"
                    text="Back"
                    onAction="#handleBack"
                    style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-padding: 6 16 6 16; -fx-background-radius: 5;"/>
        </HBox>
    </bottom>

</BorderPane>
