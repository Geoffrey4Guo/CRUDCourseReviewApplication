<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.virginia.sde.reviews.CourseSearchController">

    <top>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Course Review Search" textFill="white" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="welcomeLabel" style="-fx-font-size: 14px;" text="Welcome, User" textFill="white" />
                <Button fx:id="myReviewsButton" onAction="#handleMyReviews" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 15 8 15; -fx-background-radius: 5;" text="My Reviews" />
                <Button fx:id="logOutButton" onAction="#handleLogOut" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 15 8 15; -fx-background-radius: 5;" text="Log Out" />
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox>
            <VBox spacing="15" style="-fx-padding: 20;">

                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50" text="Search Courses" />

                    <GridPane hgap="10" vgap="10">

                        <Label style="-fx-font-size: 14px;" text="Subject:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="searchSubjectField" prefWidth="200" promptText="e.g., CS, MATH" style="-fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label style="-fx-font-size: 14px" text="Number:" GridPane.columnIndex="2" GridPane.rowIndex="0">
                            <GridPane.margin>
                                <Insets left="20" />
                            </GridPane.margin>
                        </Label>
                        <TextField fx:id="searchNumberField" prefWidth="200" promptText="e.g., 3140" style="-fx-font-size: 14px;" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                    <Label style="-fx-font-size: 14px;" text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="searchTitleField" promptText="e.g., Software" style="-fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="1" />

                    <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="2">
                        <GridPane.margin>
                            <Insets top="10" />
                        </GridPane.margin>
                        <Button fx:id="searchButton" onAction="#handleSearch" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20 8 20; -fx-background-radius: 5;" text="Search" />
                        <Button fx:id="clearSearchButton" onAction="#handleClearSearch" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20 8 20; -fx-background-radius: 5;" text="Clear/Show All" />
                    </HBox>
                  <columnConstraints>
                     <ColumnConstraints />
                     <ColumnConstraints />
                     <ColumnConstraints />
                     <ColumnConstraints />
                  </columnConstraints>
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                </GridPane>
            </VBox>

            <VBox prefHeight="449.0" prefWidth="1240.0" spacing="5" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" VBox.vgrow="ALWAYS">
               <HBox alignment="CENTER_LEFT" spacing="15">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Available Courses" />

                <Label fx:id="messageLabel" style="-fx-font-size: 13px;" textFill="#7f8c8d" wrapText="true" />
               </HBox>


                <TableView fx:id="courseTable" maxHeight="500.0" minHeight="0.0" prefHeight="1000.0" style="-fx-font-size: 13px;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="subjectColumn" minWidth="80" prefWidth="100" style="-fx-alignment: CENTER;" text="Subject" />

                        <TableColumn fx:id="numberColumn" minWidth="80" prefWidth="100" style="-fx-alignment: CENTER;" text="Number" />

                        <TableColumn fx:id="titleColumn" minWidth="200" prefWidth="450" style="-fx-alignment: CENTER;" text="Title" />

                        <TableColumn fx:id="ratingColumn" minWidth="90" prefWidth="100" style="-fx-alignment: CENTER;" text="Rating" />

                        <TableColumn fx:id="actionColumn" minWidth="100" prefWidth="120" sortable="false" style="-fx-alignment: CENTER;" text="Action" />
                    </columns>

                    <placeholder>
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="No course available. Add a course to get started" />
                    </placeholder>
                </TableView>
            </VBox>

            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Add New Course" />

                <GridPane hgap="10" vgap="10">

                    <Label style="-fx-font-size: 14px;" text="Subject:" GridPane.columnIndex="0" GridPane.rowIndex="0" />

                    <TextField fx:id="addSubjectField" prefWidth="200" promptText="2-4 letters (e.g. CS)" style="-fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label style="-fx-font-size: 11px; -fx-font-style: italic;" text="(2-4 letters only)" textFill="#7f8c8d" GridPane.columnIndex="2" GridPane.rowIndex="0" />

                    <Label style="-fx-font-size: 14px;" text="Number:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

                    <TextField fx:id="addNumberField" prefWidth="200" promptText="4 digits (e.g., 3140)" style="-fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label style="-fx-font-size: 11px; -fx-font-style: italic;" text="(exactly 4 digits)" textFill="#7f8c8d" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                    <Label style="-fx-font-size: 14px;" text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="addTitleField" promptText="Course title (1-50 characters)" style="-fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2" />

                    <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="3">
                        <GridPane.margin>
                            <Insets top="10" />
                        </GridPane.margin>
                        <Button fx:id="addCourseButton" onAction="#handleAddCourse" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20 8 20; -fx-background-radius: 5;" text="Add Course" />
                        <Label fx:id="addCourseMessageLabel" style="-fx-font-size: 12px;" textFill="#e74c3c" wrapText="true" />
                    </HBox>
                  <columnConstraints>
                     <ColumnConstraints />
                     <ColumnConstraints />
                     <ColumnConstraints />
                  </columnConstraints>
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                </GridPane>
            </VBox>
        </VBox>
        </VBox>
    </center>
</BorderPane>
