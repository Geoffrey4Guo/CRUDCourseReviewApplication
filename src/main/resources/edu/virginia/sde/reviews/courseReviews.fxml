<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.virginia.sde.reviews.CourseReviewsController"
            prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-color: #f5f5f5;">

    <!-- Top: Course title + average rating -->
    <top>
        <VBox spacing="8"
              style="-fx-background-color: #2c3e50; -fx-padding: 16;">
            <Label fx:id="courseTitleLabel"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Label fx:id="avgRatingLabel"
                   style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px;"/>
        </VBox>
    </top>

    <!-- Center: List of all reviews -->
    <center>
        <VBox spacing="8" style="-fx-padding: 16;">
            <Label text="Reviews"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <ListView fx:id="reviewListView"
                      prefHeight="400.0"
                      style="-fx-background-color: white; -fx-padding: 8; -fx-border-color: #bdc3c7; -fx-border-radius: 4;"/>
        </VBox>
    </center>

    <!-- Bottom: "My Review" editor + buttons -->
    <bottom>
        <VBox spacing="10"
              style="-fx-padding: 16; -fx-background-color: #ecf0f1;">
            <Label text="Your Review"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="8">
                <columnConstraints>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="80"/>
                </columnConstraints>

                <children>
                    <Label text="Rating (1â€“5):"
                           GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="ratingField"
                               promptText="1 to 5"
                               GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Comment:"
                           GridPane.rowIndex="1" GridPane.columnIndex="0"
                           GridPane.valignment="TOP"/>
                    <TextArea fx:id="commentArea"
                              prefRowCount="3"
                              wrapText="true"
                              promptText="Optional comment"
                              GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </children>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Label fx:id="messageLabel"
                       style="-fx-font-size: 12px;"
                       HBox.hgrow="ALWAYS"/>
                <Button fx:id="submitUpdateButton"
                        text="Submit Review"
                        onAction="#handleSubmitOrUpdate"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 6 16 6 16; -fx-background-radius: 5;"/>
                <Button fx:id="deleteButton"
                        text="Delete"
                        onAction="#handleDelete"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 6 16 6 16; -fx-background-radius: 5;"/>
                <Button fx:id="backButton"
                        text="Back"
                        onAction="#handleBack"
                        style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-padding: 6 16 6 16; -fx-background-radius: 5;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
